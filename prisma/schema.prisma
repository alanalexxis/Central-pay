generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model alumno {
    idalumno         Int    @id @default(autoincrement())
    nombre           String
    telefono         String
    fecha_nacimiento String
    sede             String
    sexo             String
    domicilio        String
    barrio           String
    tutor            String
    escolaridad      String
    pago             pago[]
}

model pago {
    idpago     Int      @id @default(autoincrement())
    idalumno   Int
    fecha_pago DateTime @default(now())
    tipo_pago  String
    nota_venta String
    alumno     alumno   @relation(fields: [idalumno], references: [idalumno], onDelete: NoAction, onUpdate: NoAction, map: "fk_pago_alumno")

    @@index([idalumno], map: "fk_pago_alumno_idx")
}

model usuario {
    idusuario  Int     @id @default(autoincrement())
    correo     String  @unique
    contrasena String
    nombre     String
    imagen     String?
}

model inventario {
    idinventario Int     @id @default(autoincrement())
    nombre       String
    detalles     String?
    estado       String
}
